option_settings:
	aws:elasticbeanstalk:container:python:
		# Tell EB (Gunicorn) where your Flask app lives: <module>:<app_object>
		WSGIPath: app:app
		# Optional tuning
		NumProcesses: 1
		NumThreads: 15

	aws:elasticbeanstalk:application:environment:
		# Use a strong value in EB Console -> Configuration -> Software or set here for defaults
		FLASK_ENV: production
		SECRET_KEY: change-this-secret

	aws:elasticbeanstalk:environment:proxy:staticfiles:
		# Map /static to the local static/ folder for efficient Nginx serving
		/static: static

