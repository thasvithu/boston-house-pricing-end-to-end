option_settings:
  aws:elasticbeanstalk:container:python:
    # For EB Python platform, point to the WSGI script file
    WSGIPath: application.py
    # Optional tuning
    NumProcesses: 1
    NumThreads: 15

  aws:elasticbeanstalk:application:environment:
    # Use a strong value in EB Console -> Configuration -> Software or set here for defaults
    FLASK_ENV: production
    SECRET_KEY: change-this-secret

  aws:elasticbeanstalk:environment:proxy:staticfiles:
    # Map /static to the local static/ folder for efficient Nginx serving
    /static: static

